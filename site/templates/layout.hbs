                class="a" />
              <path d="M36.2 19L39.1 19 39.1 19.8C39.1 19.8 39.9 18.6 42.9 18.8L42.9 21.3C42.5 21.2 42.1 21.1 41.6 21.1 39.4 21.1 39.1 22.7 39.1 24.6L39.1 28.4 36.2 28.4 36.2 19"
                class="a" />
              <polyline points="4.1 15.9 7 13.9 7 17.5 4.1 17.5 4.1 15.9" class="a" />
              <polyline points="47.6 46 47.6 44.4 47.1 44.4 47.1 44.2 48.4 44.2 48.4 44.4 47.9 44.4 47.9 46 47.6 46" class="b" />
              <polyline points="50.2 46 50.2 44.5 49.6 46 49.5 46 48.9 44.5 48.9 46 48.7 46 48.7 44.2 49 44.2 49.5 45.6 50.1 44.2 50.4 44.2 50.4 46 50.2 46"
                class="b" />
            </g>
          </g>
        </svg>
        <span>Pendo.io Customization Guide v{{pkgJson.version}}</span>
      </a>
    </header>

    <main class="ids-row">
      <aside class="ids-row--col-sm-3">
        <ul class="ids-list ids-list--hover ids-container">
          {{#each sitemap.sections}}
            {{#if this.slug}}
              <li><a href="/{{slug}}.html" class="ids-list--item">{{this.name}}</a></li>
            {{else}}
            <li class="ids-list--heading">{{this.name}}</li>
            {{/if}}
              <ul class="ids-list">
                {{#each this.pages}}
                {{#if this.slug}}
                <li><a href="/{{slug}}.html" class="ids-list--item">{{this.name}}</a></li>
                {{else}}
                <li class="ids-list--heading">{{this.name}}</li>
                {{/if}}
                  {{#if this.pages}}
                    <ul class="ids-list">
                      {{#each this.pages}}
                        {{#if this.slug}}
                          <li><a href="/{{slug}}.html" class="ids-list--item">{{this.name}}</a></li>
                        {{else}}
                          <li class="ids-list--heading">{{this.name}}</li>
                        {{/if}}
                      {{/each}}
                    </ul>
                  {{/if}}
                {{/each}}
              </ul>
            </li>
          {{/each}}
        </ul>
      </aside>
      <div class="ids-row--col-sm-8">
        {{#if meta.title}}
          <div class="hero">
            <h1>{{meta.title}}</h1>
            {{#if meta.demo }}
              <a href="{{meta.demo.local.path}}" title="Demo for {{meta.title}}">View Live Demo</a>
            {{/if}} {{#if meta.description}}
              <p class="page-description">{{meta.description}}</p>
            {{/if}}
          </div>
        {{/if}}

        {{{ contents }}}
      </div>
    </main>
  </body>
</html>
